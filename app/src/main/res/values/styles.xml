<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AccountOptPopupMenuStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorTitle</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorTitle</item>
    </style>

    <style name="LoginAndRegisterEditTextTheme">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">@color/colorProgressRing</item>
        <item name="colorControlHighlight">@color/colorProgressRing</item>
    </style>

    <style name="ChangePasswordEditTextTheme">
        <item name="colorControlNormal">#1F2020</item>
        <item name="colorControlActivated">@color/colorProgressRing</item>
        <item name="colorControlHighlight">@color/colorProgressRing</item>
    </style>

    <style name="CustomProgressDialog" parent="Theme.AppCompat.Dialog">
    <!--此屬性控制懸浮窗背景是否變暗-->
    <item name="android:backgroundDimEnabled">false</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorMainNavItemSelect</item>
        <item name="android:textColorSecondary">@color/colorMainNavItemNormal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />


    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>


    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color -->
        <item name="colorControlActivated">@color/colorPurple</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/dialog_subtitle</item>

        <!-- inactive track color -->
        <item name="android:colorForeground">@color/dialog_subtitle
        </item>
    </style>

</resources>
