<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.secuxtech.mysecuxpay.Utility.SecuXBarcodePreview
        android:id="@+id/zxing_barcode_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.secuxtech.mysecuxpay.Utility.SecuXViewfinderView
        android:id="@+id/zxing_viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan QR Code"
        android:textSize="24dp"
        android:textColor="#FFFFFFFF"

        android:layout_gravity="center"
        android:layout_marginBottom="180sp" />

    <TextView
        android:id="@+id/textView_storename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Center the QRCode in the area below"
        android:textSize="14dp"
        android:textColor="#FFFFFFFF"

        android:layout_gravity="center"
        android:layout_marginBottom="150dp"
  />

</FrameLayout>
